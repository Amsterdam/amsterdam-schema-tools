{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/v0.1/datapunt",
  "definitions": {
    "uri": {
      "type": "string",
      "pattern": "^https://api.data.amsterdam.nl/",
      "format": "uri"
    },
    "YearOptionalMonthOptionalDay": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[0-9]{4}$"
        },
        {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}$"
        },
        {
          "type": "string",
          "format": "date"
        }
      ]
    }
  }
}

