{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/v0.1/datapunt",
  "definitions": {
    "uri": {
      "type": "string",
      "pattern": "^https://api.data.amsterdam.nl/",
      "format": "uri"
    },
    "yearOptionalMonthOptionalDay": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[0-9]{4}$"
        },
        {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}$"
        },
        {
          "type": "string",
          "format": "date"
        }
      ]
    },
    "contact": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "website": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}

