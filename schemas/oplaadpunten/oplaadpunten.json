{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.data.amsterdam.nl/v0.1/oplaadpunten",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "dataset",
    "type",
    "geometry"
  ],
  "properties": {
    "id": {
      "$ref": "https://schemas.data.amsterdam.nl/v0.1#/definitions/id"
    },
    "type": {
      "type": "string"
    },
    "dataset": {
      "$ref": "https://schemas.data.amsterdam.nl/v0.1#/definitions/dataset"
    },
    "address": {
      "description": "Street address closest to charging station",
      "$class": "https://schemas.data.amsterdam.nl/v0.1/bag#/definitions/nummeraanduiding",
      "$ref": "https://schemas.data.amsterdam.nl/v0.1#/definitions/uri"
    },
    "available": {
      "description": "Availability",
      "type": "boolean"
    },
    "connected": {
      "description": "Connected",
      "type": "boolean"
    },
    "contact": {
      "description": "Contact",
      "type": "object"
    },
    "capabilities": {
      "description": "Capabilities",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "CreateTicketAM",
          "SmoovCompatible",
          "ViaCommunicator",
          "SmsResetEnabled",
          "RebuildTwoToThreeMeters",
          "TeslaAdapter"
        ]
      }
    },
    "evses": {
      "description": "List of EVSEs (electric vehicle supply equipment)",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "connectorType": {
            "type": "string"
          },
          "maxPower": {
            "description": "Charging capacity",
            "type": "number"
          }
        }
      }
    },
    "geometry": {
      "description": "Coordinates of the charging location",
      "type": "object"
    }
  }
}